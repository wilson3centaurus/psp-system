<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Teachers | School</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="erp-shell">
    <aside class="erp-sidebar">
      <div class="sidebar-brand">
        <img src="/assets/logo.png" alt="Logo" class="logo">
        <div class="brand-text"><%= user.username %> (School)</div>
      </div>
      <nav class="sidebar-nav">
        <a class="sidebar-link" href="/school/dashboard"><i class="fas fa-gauge"></i> Dashboard</a>
        <a class="sidebar-link" href="/student"><i class="fas fa-user-graduate"></i> Students</a>
        <a class="sidebar-link active" href="/teacher"><i class="fas fa-chalkboard-teacher"></i> Teachers</a>
        <a class="sidebar-link" href="/student-attendance"><i class="fas fa-user-check"></i> Student Attendance</a>
        <a class="sidebar-link" href="/teacher-attendance"><i class="fas fa-user-clock"></i> Teacher Attendance</a>
        <a class="sidebar-link" href="/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
      </nav>
    </aside>

    <div class="erp-main">
      <header class="erp-topbar">
        <div class="title">Teachers</div>
        <div class="nav-actions">
          <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </header>

      <section class="erp-content">
        <div class="page-header">
          <div>
            <h2><i class="fas fa-chalkboard-teacher"></i> Teachers</h2>
            <p class="subhead">Maintain your staff list, search, and manage records.</p>
          </div>
        </div>

        <% if (success_msg) { %>
          <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg && String(error_msg).trim() !== "") { %>
          <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <div class="card">
          <form action="/teacher/search" method="GET" class="actions-row">
            <input 
              type="text" 
              name="q" 
              id="searchInput"
              placeholder="Search by name, subject or ID"
              value="<%= typeof query !== 'undefined' ? query : '' %>"
              autocomplete="off"
            >
            <button type="submit" class="btn btn-primary">
              <i class="fas fa-search"></i> Search
            </button>
            <a href="/teacher" class="btn btn-outline"><i class="fas fa-rotate-left"></i> Reset</a>
          </form>
        </div>

        <div class="card" style="margin-top: 1rem;">
          <div class="actions-row" style="flex-wrap: wrap;">
            <a href="/teacher/add" class="btn btn-primary">
              <i class="fas fa-user-plus"></i> Add Teacher
            </a>
            <form method="POST" action="/teacher/upload-csv" enctype="multipart/form-data" class="actions-row" style="gap: 0.5rem;">
              <input type="file" name="csv" accept=".csv" required>
              <button type="submit" class="btn btn-secondary">
                <i class="fas fa-upload"></i> Upload CSV
              </button>
            </form>
          </div>
        </div>

        <div class="table-wrapper" style="margin-top: 1rem;">
          <table>
            <thead>
              <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Subject</th>
                <th>Gender</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Teacher ID</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (teachers.length === 0) { %>
                <tr><td colspan="8">No teachers found.</td></tr>
              <% } else { %>
                <% teachers.forEach((teacher, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= teacher.name %></td>
                    <td><%= teacher.subject %></td>
                    <td><%= teacher.gender %></td>
                    <td><%= teacher.email %></td>
                    <td><%= teacher.phone %></td>
                    <td><%= teacher.teacher_id %></td>
                    <td class="actions-row">
                      <a href="/teacher/edit/<%= teacher.id %>" class="btn btn-outline" style="padding: 0.45rem 0.6rem;"><i class="fas fa-pen"></i></a>
                      <form action="/teacher/delete/<%= teacher.id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this teacher?')">
                        <button type="submit" class="btn btn-danger" style="padding: 0.45rem 0.6rem;"><i class="fas fa-trash"></i></button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>

      <footer class="footer">
        2025 Primary School Performance System | powered by memory nikisi
      </footer>
    </div>
  </div>

  <script>
    // Auto-refresh list when search bar is cleared
    document.getElementById("searchInput")?.addEventListener("input", function () {
      if (this.value.trim() === "") {
        window.location.href = "/teacher";
      }
    });
  </script>
</body>
</html>
