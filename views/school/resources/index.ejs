<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Resources | School</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="erp-shell">
    <aside class="erp-sidebar">
      <div class="sidebar-brand">
        <img src="/assets/logo.png" alt="Logo" class="logo">
        <div class="brand-text"><%= user.username %> (School)</div>
      </div>
      <nav class="sidebar-nav">
        <a class="sidebar-link" href="/school/dashboard"><i class="fas fa-gauge"></i> Dashboard</a>
        <a class="sidebar-link" href="/student"><i class="fas fa-user-graduate"></i> Students</a>
        <a class="sidebar-link" href="/teacher"><i class="fas fa-chalkboard-teacher"></i> Teachers</a>
        <a class="sidebar-link" href="/student-attendance"><i class="fas fa-user-check"></i> Student Attendance</a>
        <a class="sidebar-link" href="/teacher-attendance"><i class="fas fa-user-clock"></i> Teacher Attendance</a>
        <a class="sidebar-link active" href="/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
      </nav>
    </aside>

    <div class="erp-main">
      <header class="erp-topbar">
        <div class="title">Resources</div>
        <div class="nav-actions">
          <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </header>

      <section class="erp-content">
        <div class="page-header">
          <div>
            <h2><i class="fas fa-book"></i> School Resources</h2>
            <p class="subhead">Manage per-subject resource counts and upload via CSV.</p>
          </div>
          <a href="/resources/add" class="btn btn-primary"><i class="fas fa-plus"></i> Add Resource</a>
        </div>

        <% if (success_msg) { %>
          <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg) { %>
          <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <div class="card">
          <form action="/resources/upload-csv" method="POST" enctype="multipart/form-data" class="actions-row">
            <div style="flex:1;">
              <label>Upload Resources via CSV</label>
              <small>Columns: subject_id, subject_name, grade, num_students, num_books, num_computers</small>
            </div>
            <input type="file" name="csv" accept=".csv" required>
            <button class="btn btn-secondary" type="submit"><i class="fas fa-upload"></i> Upload CSV</button>
          </form>
        </div>

        <div class="table-wrapper" style="margin-top: 1rem;">
          <table>
            <thead>
              <tr>
                <th>#</th>
                <th>Subject ID</th>
                <th>Subject Name</th>
                <th>Grade</th>
                <th>Students</th>
                <th>Books</th>
                <th>Computers</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (!resources || !resources.length) { %>
                <tr><td colspan="8">No resources added yet.</td></tr>
              <% } else { %>
                <% resources.forEach((res, i) => { %>
                  <tr>
                    <td><%= i + 1 %></td>
                    <td><%= res.subject_id %></td>
                    <td><%= res.subject_name %></td>
                    <td><%= res.grade %></td>
                    <td><%= res.num_students %></td>
                    <td><%= res.num_books %></td>
                    <td><%= res.num_computers %></td>
                    <td class="actions-row">
                      <a href="/resources/edit/<%= res.id %>" class="btn btn-outline" style="padding: 0.45rem 0.6rem;"><i class="fas fa-edit"></i></a>
                      <form action="/resources/delete/<%= res.id %>" method="POST" onsubmit="return confirm('Delete this resource?')" class="inline-form">
                        <button type="submit" class="btn btn-danger" style="padding: 0.45rem 0.6rem;"><i class="fas fa-trash"></i></button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </section>

      <footer class="footer">
        2025 Primary School Performance System | powered by memory nikisi
      </footer>
    </div>
  </div>
</body>
</html>
