<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reports | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="erp-shell">
    <aside class="erp-sidebar">
      <div class="sidebar-brand">
        <img src="/assets/logo.png" alt="Logo" class="logo">
        <div class="brand-text">Primary School Performance</div>
      </div>
      <nav class="sidebar-nav">
        <a class="sidebar-link" href="/admin/dashboard"><i class="fas fa-gauge"></i> Dashboard</a>
        <a class="sidebar-link" href="/admin/schools"><i class="fas fa-school"></i> Schools</a>
        <a class="sidebar-link" href="/admin/teachers"><i class="fas fa-users"></i> Teachers</a>
        <a class="sidebar-link" href="/admin/students"><i class="fas fa-child"></i> Students</a>
        <a class="sidebar-link" href="/admin/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        <a class="sidebar-link" href="/admin/attendance"><i class="fas fa-calendar-check"></i> Attendance</a>
        <a class="sidebar-link" href="/admin/analytics"><i class="fas fa-chart-pie"></i> Analytics</a>
        <a class="sidebar-link active" href="/admin/reports"><i class="fas fa-file-alt"></i> Reports</a>
        <a class="sidebar-link" href="/itadmin"><i class="fas fa-user-cog"></i> IT Admins</a>
      </nav>
    </aside>

    <div class="erp-main">
      <header class="erp-topbar">
        <div class="title">Reports</div>
        <div class="nav-actions">
          <a class="nav-link" href="/admin/dashboard"><i class="fas fa-home"></i> Dashboard</a>
          <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </header>

      <section class="erp-content">
        <div class="page-header">
          <div>
            <h2><i class="fas fa-file-pdf"></i> Generate School Report</h2>
            <p class="subhead">Select a school to generate a PDF with enrollment, resources, attendance, and recommendations.</p>
          </div>
        </div>

        <% if (success_msg) { %>
          <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg) { %>
          <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <div class="card" style="max-width: 640px;">
          <form id="reportForm" method="GET">
            <label for="schoolSelect">School</label>
            <select id="schoolSelect" name="schoolId" required>
              <option value="">-- Select a school --</option>
              <% schools.forEach(school => { %>
                <option value="<%= school.id %>"><%= school.username %></option>
              <% }) %>
            </select>

            <button class="btn btn-primary" type="submit" style="width: 100%; margin-top: 0.9rem;">
              <i class="fas fa-file-export"></i> Generate Report
            </button>
            <div class="subhead" style="margin-top: 0.6rem;">A PDF will download or open in a new tab when the report is generated.</div>
          </form>
        </div>
      </section>

      <footer class="footer">
        2025 Primary School Performance System | powered by memory nikisi
      </footer>
    </div>
  </div>

  <script>
    (function() {
      const form = document.getElementById('reportForm');
      const select = document.getElementById('schoolSelect');
      form.addEventListener('submit', function(e) {
        const selected = select.value;
        if (!selected) {
          e.preventDefault();
          alert('Please select a school.');
          return;
        }
        form.action = '/admin/reports/generate/' + encodeURIComponent(selected);
      });
    })();
  </script>
</body>
</html>
