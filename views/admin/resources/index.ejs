<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Resources | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <div class="erp-shell">
    <aside class="erp-sidebar">
      <div class="sidebar-brand">
        <img src="/assets/logo.png" alt="Logo" class="logo">
        <div class="brand-text">Primary School Performance</div>
      </div>
      <nav class="sidebar-nav">
        <a class="sidebar-link" href="/admin/dashboard"><i class="fas fa-gauge"></i> Dashboard</a>
        <a class="sidebar-link" href="/admin/schools"><i class="fas fa-school"></i> Schools</a>
        <a class="sidebar-link" href="/admin/teachers"><i class="fas fa-users"></i> Teachers</a>
        <a class="sidebar-link" href="/admin/students"><i class="fas fa-child"></i> Students</a>
        <a class="sidebar-link active" href="/admin/resources"><i class="fas fa-boxes-stacked"></i> Resources</a>
        <a class="sidebar-link" href="/admin/attendance"><i class="fas fa-calendar-check"></i> Attendance</a>
        <a class="sidebar-link" href="/admin/analytics"><i class="fas fa-chart-pie"></i> Analytics</a>
        <a class="sidebar-link" href="/admin/reports"><i class="fas fa-file-alt"></i> Reports</a>
        <a class="sidebar-link" href="/itadmin"><i class="fas fa-user-cog"></i> IT Admins</a>
      </nav>
    </aside>

    <div class="erp-main">
      <header class="erp-topbar">
        <div class="title">Resources Overview</div>
        <div class="nav-actions">
          <a class="nav-link" href="/admin/dashboard"><i class="fas fa-home"></i> Dashboard</a>
          <a class="nav-link" href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>
      </header>

      <section class="erp-content">
        <div class="page-header">
          <div>
            <h2><i class="fas fa-boxes-stacked"></i> Resource Coverage by Subject</h2>
            <p class="subhead">Aggregated counts of students, books, and computers from every school.</p>
          </div>
          <span class="badge"><i class="fas fa-building-columns"></i> Schools contributing: <%= totals.totalSchools || 0 %></span>
        </div>

        <% if (success_msg) { %>
          <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg) { %>
          <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <div class="card-grid">
          <div class="card">
            <div class="metric">
              <i class="fas fa-layer-group"></i>
              <div>
                <div class="label">Subjects tracked</div>
                <div class="value"><%= totals.subjects || 0 %></div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="metric">
              <i class="fas fa-users"></i>
              <div>
                <div class="label">Total students</div>
                <div class="value"><%= totals.totalStudents || 0 %></div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="metric">
              <i class="fas fa-book-open"></i>
              <div>
                <div class="label">Total books</div>
                <div class="value"><%= totals.totalBooks || 0 %></div>
              </div>
            </div>
          </div>
          <div class="card">
            <div class="metric">
              <i class="fas fa-desktop"></i>
              <div>
                <div class="label">Total computers</div>
                <div class="value"><%= totals.totalComputers || 0 %></div>
              </div>
            </div>
          </div>
        </div>

        <div class="table-wrapper">
          <table>
            <thead>
              <tr>
                <th>#</th>
                <th>Subject</th>
                <th>Students</th>
                <th>Books</th>
                <th>Computers</th>
                <th>Records</sup></th>
                <th>Schools</th>
              </tr>
            </thead>
            <tbody>
              <% if (!summary || summary.length === 0) { %>
                <tr>
                  <td colspan="7">No resource data available yet.</td>
                </tr>
              <% } %>
              <% summary.forEach((row, idx) => { %>
                <tr>
                  <td><%= idx + 1 %></td>
                  <td><%= row.subject_name || 'Unknown subject' %></td>
                  <td><%= row.total_students || 0 %></td>
                  <td><%= row.total_books || 0 %></td>
                  <td><%= row.total_computers || 0 %></td>
                  <td><span class="badge"><%= row.record_count || 0 %> entries</span></td>
                  <td><span class="badge"><%= row.school_count || 0 %> school(s)</span></td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>

      <footer class="footer">
        2025 Primary School Performance System | powered by memory nikisi
      </footer>
    </div>
  </div>
</body>
</html>
